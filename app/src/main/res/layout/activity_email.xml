<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Email"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupTheme="@style/AppTheme.AppBarOverlay"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="34dp"

                    app:srcCompat="@drawable/ree" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                    android:text="Notify"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <EditText
        android:id="@+id/editmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reciepient"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/mailsub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
         />
    <EditText
        android:id="@+id/mailmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message Body"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
         />

    <Button
        android:background="@drawable/sub"
        android:layout_marginLeft="120dp"
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Compose Email" />
    <Button
        android:background="@drawable/ck"
        android:layout_marginLeft="10dp"
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp" />




</LinearLayout>